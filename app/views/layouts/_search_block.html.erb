<div class="card my-4">
    <h5 class="card-header">Поиск</h5>
    <div class="card-body">
        <div class="input-group">
            <%= form_tag posts_path, method: 'get' do %>
                <%= text_field_tag :search, params[:search] %>
                <%= submit_tag 'Найти', class: 'btn btn-primary btn-sm' %>
            <% end %>
        </div>
    </div>
</div>
