<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<!--header-->
<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="<%= root_path %>">Главная<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= edit_user_registration_path %>" ><%= current_user.name if user_signed_in? %></a>
        </li>
      </ul>
      <% if user_signed_in? %>
        <%= link_to 'Подписки', profiles_friends_posts_path,  class: 'btn btn-danger float-right mr-2' %>
        <%= link_to 'Новая статья', new_post_path, class: 'btn btn-primary float-right mr-2' %>
        <%= link_to 'Выход', destroy_user_session_path, method: :delete, class: 'btn btn-danger float-right' %>
      <% else %>
        <%= link_to 'Регистрация', new_user_registration_path, class: 'btn btn-success float-right mr-2' %>
        <%= link_to 'Вход', new_user_session_path, class: 'btn btn-primary float-right' %>
      <% end %>
    </div>
  </nav>
</div>
<div class="container main">
  <%= render 'layouts/flashes' %>
  <%= yield %>
</div>
</body>
</html>
