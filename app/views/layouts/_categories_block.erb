<div class="card my-4">
    <h5 class="card-header">Категории</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <ul class="list-unstyled mb-0">
                    <% @categories.each do |category| %>
                        <li>
                        <%= link_to "#{category.name}", category_all_posts_path(category.id) , class: 'badge badge-secondary' %>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
</div>
